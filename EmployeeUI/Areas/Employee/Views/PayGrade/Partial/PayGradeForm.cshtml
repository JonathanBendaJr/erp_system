
@model DTO.PayGradeDTO
<div class="box-body">
    <input type="number" hidden value="@Model.ID" name="ID" />
    <div class="form-group">
        <label>Position</label>
        @Html.DropDownList("PositionID", Model.PositionList, "Select Position", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PositionID, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Pay Grade</label>
        @Html.TextBoxFor(x => x.PayGrade, new { @class = "form-control", @placeholder = "Pay Grade" })
        @Html.ValidationMessageFor(x => x.PayGrade, "", new { @class = "text-danger" })
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
