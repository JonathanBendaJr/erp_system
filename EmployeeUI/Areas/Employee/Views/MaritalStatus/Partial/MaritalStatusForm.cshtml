

@model DTO.MaritalStatusDTO
<div class="box-body">
    <div class="form-group">
        <label>Marital Status Name</label>
        @Html.TextBoxFor(x => x.MaritalStatus, new { @class = "form-control", @placeholder = "Marital Status Name" })
        @Html.ValidationMessageFor(x => x.MaritalStatus, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Abbreviation</label>
        @Html.TextBoxFor(x => x.Abbreviation, new { @class = "form-control", @placeholder = "Abbreviation" })
        @Html.ValidationMessageFor(x => x.Abbreviation, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Marital Status Description" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>
    <input hidden type="number" value="@Model.ID" name="ID" />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>


