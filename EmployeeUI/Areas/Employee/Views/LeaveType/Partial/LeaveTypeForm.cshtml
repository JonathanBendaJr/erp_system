

@model DTO.LeaveTypeDTO
<div class="box-body">
    <div class="form-group">
        <label>Leave Type</label>
        @Html.TextBoxFor(x => x.LeaveType, new { @class = "form-control", @placeholder = "Leave Type" })
        @Html.ValidationMessageFor(x => x.LeaveType, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Leave Type Description" })
        @Html.ValidationMessageFor(x => x.Description)
    </div>
    <input hidden type="number" value="@Model.ID" name="ID" />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>


