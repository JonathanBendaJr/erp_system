
@model DTO.FleetVehicleBookingDTO
<div class="box-body">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Booking Information</h3>
            </div>
            <div class="card-body">
                <input hidden type="number" value="@Model.ID" name="ID" />
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Destination Location</label>
                            @Html.TextBoxFor(x => x.Location, new { @class = "form-control", @placeholder = "Enter Destination Location" })
                            @Html.ValidationMessageFor(x => x.Location, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Destination County </label>
                            @Html.DropDownList("CountyID", Model.Counties, "Select Destination County", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.CountyID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Booking Description</label>
                            @Html.TextAreaFor(x => x.BookingDescription, new { @class = "form-control", @placeholder = "Enter Details of Booking" })
                            @Html.ValidationMessageFor(x => x.BookingDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>From Date</label>
                            @Html.TextBoxFor(x => x.FromDate, new { @class = "form-control datepicker" })
                            @Html.ValidationMessageFor(x => x.FromDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>To Date</label>
                            @Html.TextBoxFor(x => x.ToDate, new { @class = "form-control datepicker"})
                            @Html.ValidationMessageFor(x => x.ToDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
        </div>

    <div class="col-md-12">
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Booking</button>
        </div>
    </div>
</div>




