
@model DTO.TaskActionDTO
<div class="box-body">
    <div class="form-group">
        <label>Action</label>
        @Html.TextBoxFor(x => x.Action, new { @class = "form-control", @placeholder = "Action Name" })
        @Html.ValidationMessageFor(x => x.Action, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Action Description" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>
    <input hidden type="number" value="@Model.ID" name="ID" />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
