
@model DTO.FleetVehicleBookingReportDTO
<div class="box-body">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Booking Report Approval</h3>
        </div>
        <div class="card-body">
            <input hidden type="number" value="@Model.ID" name="ID" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Fleet Manager Approval Status</label>
                        @Html.DropDownList("FleetManagerApprovalID", Model.Approvals, "Select Status", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FleetManagerApprovalID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Fleet Manager Approval Message</label>
                            @Html.TextAreaFor(x => x.FleetManagerMessage, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.FleetManagerMessage, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


            </div>
    </div>

    <div class="col-md-12">
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>
