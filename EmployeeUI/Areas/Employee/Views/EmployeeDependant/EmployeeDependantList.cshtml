
@{
    ViewBag.Title = "EmployeeDependantList";
    Layout = "~/Areas/Employee/Views/Shared/MasterLayout.cshtml";
}

@model List<DTO.EmployeeDependantDTO>
<section class="content-header">
    <h1>Employee Work List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>HR Department</a></li>
        <li class="breadcrumb-item"><a>Employee</a></li>
        <li class="breadcrumb-item active"><a>Employee Work List</a></li>
    </ol>

</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Employee/EmployeeDependant/AddEmployeeDependant'">Add Employee Dependant</button>
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Employee/Employee/EmployeeList'">Employee List</button>

</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">List of Employee Dependants</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Relationship</th>
                    <th>Date of Birth</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr id="a_@item.ID">
                    <td>@item.FullName</td>
                    <td>@item.RelationshipName</td>
                    <td>@item.DateOfBirth</td>
                    <td>@(DateTime.Now.Year - item.DateOfBirth.Year)</td>
                    <td align="center">
                        <a href="/Employee/EmployeeDependant/UpdateEmployeeDependant/@item.ID">
                            <img width="20" height="20" src="~/Areas/Employee/Content/icons/update.ico" />
                        </a>
                        <span>|</span>
                        <a href="#">
                            <img width="20" height="20" src="~/Areas/Employee/Content/icons/delete.ico" onclick="AskQuestion('/Employee/EmployeeDependant/DeleteEmployeeDependant/',@item.ID)" />
                        </a>
                    </td>

                </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th>Full Name</th>
                    <th>Relationship</th>
                    <th>Date of Birth</th>
                    <th>Age</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Employee/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Employee/Content/JS/DeleteRecord.js"></script>

