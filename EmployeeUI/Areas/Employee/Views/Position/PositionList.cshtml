
@{
    ViewBag.Title = "PositionList";
    Layout = "~/Areas/Employee/Views/Shared/MasterLayout.cshtml";
}

@model List<DTO.PositionDTO>
<section class="content-header">
    <h1>Position List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Position</a></li>
        <li class="breadcrumb-item active"><a>Position List</a></li>
    </ol>

</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Employee/Position/AddPosition'">Add Position</button>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">List of Positions</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Position</th>
                    <th>Position Grade</th>
                    <th>Description</th>
                    <th>is Supervisory</th>
                    <th>is Managerial</th>
                    <th>is Top Management</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr id="a_@item.ID">
                    <td>@item.PositionName</td>
                    <td>@item.PositionGrade</td>
                    <td>@item.Description</td>
                    <td>@item.isSupervisory</td>
                    <td>@item.isManagerial</td>
                    <td>@item.isTopManagement</td>
                    <td align="center">
                        <a href="/Employee/Position/UpdatePosition/@item.ID">
                            <img width="20" height="20" src="~/Areas/Employee/Content/icons/update.ico" />
                        </a>
                        <span>|</span>
                        <a href="#">
                            <img width="20" height="20" src="~/Areas/Employee/Content/icons/delete.ico" onclick="AskQuestion('/Employee/Position/DeletePosition/',@item.ID)" />
                        </a>
                    </td>

                </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th>Position</th>
                    <th>Position Grade</th>
                    <th>Description</th>
                    <th>is Supervisory</th>
                    <th>is Managerial</th>
                    <th>is Top Management</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Employee/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Employee/Content/JS/DeleteRecord.js"></script>
