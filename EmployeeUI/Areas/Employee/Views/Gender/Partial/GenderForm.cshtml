

@model DTO.GenderDTO
<div class="box-body">
    <div class="form-group">
        <label>Gender</label>
        @Html.TextBoxFor(x => x.Gender, new { @class = "form-control", @placeholder = "Enter Gender" })
        @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
    </div>
    <input hidden type="number" value="@Model.ID" name="ID" />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>


</div>

