@model DTO.FleetVehicleRegistrationDTO
<div class="box-body">
    <div class="form-group">
        <label>Registration Status</label>
        @Html.TextBoxFor(x => x.RegistrationStatus, new { @class = "form-control", @placeholder = "Enter Registration Status" })
        @Html.ValidationMessageFor(x => x.RegistrationStatus, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Enter Description" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
    </div>
    <input hidden type="number" value="@Model.ID" name="ID" />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>


</div>


