

@model DTO.TaskRatingDTO
<div class="box-body">
    <div class="form-group">
        <label>Rating</label>
        @Html.TextBoxFor(x => x.Rating, new { @class = "form-control", @placeholder = "Enter Rating" })
        @Html.ValidationMessageFor(x => x.Rating, "", new { @class = "text-danger" })
    </div>
    <input hidden type="number" value="@Model.ID" name="ID" />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>


</div>


