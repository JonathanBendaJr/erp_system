
@model DTO.EmployeeDepartmentDTO
<div class="box-body">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Employee Department</h3>
            </div>
            <div class="card-body">
                <input hidden type="number" value="@Model.ID" name="ID" />
                <input hidden type="number" value="@Model.EmployeeID" name="EmployeeID" />
                <div class="row">
                    <div class="col-md-10 offset-1">
                        <div class="form-group" align="center">
                            <span>Employee Name:</span> <span>&nbsp;&nbsp;&nbsp;</span><label>@(Model.employeeDTO.FName + " " + Model.employeeDTO.LName)</label>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Department</label>
                            @Html.DropDownList("DepartmentID", Model.DepartmentList, "Select Department", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.DepartmentID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Position</label>
                            @Html.DropDownList("PositionID", Model.PositionList, "Select Position", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.PositionID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Supervisor Role</label>
                            @Html.DropDownList("SupervisorRoleID", Model.SupervisorList, "Select Supervisor Role", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.SupervisorRoleID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Manager Role</label>
                            @Html.DropDownList("ManagerRoleID", Model.ManagerList, "Select Manager Role", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ManagerRoleID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Employee Department</button>
        </div>
    </div>
</div>






