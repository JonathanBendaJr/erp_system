
@model DTO.EmployeeCardDTO
<div class="box-body">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Basic Information</h3>
            </div>
            <div class="card-body">
                <input hidden type="number" value="@Model.Employee.ID" name="ID" />
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center">
                            <img width="450" height="430" style="border-width:thick" src="~/Areas/Employee/Content/Employees/EmpImages/@Model.Employee.ImagePath" alt="Employee picture" />
                        </div>
                        <h3 class="profile-username text-center">@(Model.Employee.FName + " "+ Model.Employee.LName)</h3>
                        <p class="text-muted text-center">@Model.EmployeeDepartment.DepartmentName</p>
                        <p class="text-muted text-center">@Model.Employee.PositionName</p>
                    </div>
                    <div class="col-md-7 offset-1">
                        <label><i class="fas fa-phone mr-1"></i> Phone</label>
                        <p class="text-muted">@(Model.Employee.Phone1 + ", " + Model.Employee.Phone2)</p>
                        <hr />
                        <label><i class="fas fa-mail-bulk mr-1"></i> Email</label>
                        <p class="text-muted">@(Model.Employee.Email)</p>
                        <hr />
                        <label><i class="fas fa-phone mr-1"></i> Phone</label>
                        <p class="text-muted">@(Model.Employee.Phone1 + ", " + Model.Employee.Phone2)</p>
                        <hr />
                        <label><i class="fas fa-map-marker-alt mr-1"></i> Address</label>
                        <p class="text-muted">@(Model.Employee.Address + ", " + Model.Employee.City)</p>
                        <hr />
                        <label><i class="fas fa-genderless mr-1"></i> Gender</label>
                        <p class="text-muted">@(Model.Employee.GenderName)</p>
                        <hr />
                        <label><i class="fas fa-user-friends mr-1"></i> Marital Status</label>
                        <p class="text-muted">@(Model.Employee.MaritalStatusName)</p>
                        <hr />
                        <label><i class="fas fa-user-friends mr-1"></i> Date of Birth</label>
                        <p class="text-muted">@(Model.Employee.DateOfBirth.ToString("d"))</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Department and Position</h3>
            </div>
            <div class="card-body">
                <input hidden type="number" value="@Model.Employee.ID" name="ID" />
                <div class="row">
                    <div class="col-md-4">
                        <label><i class="fas fa-school mr-1"></i>Department Name</label>
                        <p class="text-muted">@Model.EmployeeDepartment.DepartmentName</p>
                    </div>
                    <div class="col-md-4">
                        <label><i class="fas fa-book mr-1"></i>Position Title</label>
                        <p class="text-muted">@Model.EmployeeDepartment.PositionName</p>
                    </div>
                    <div class="col-md-4">
                        <label><i class="fas fa-user-check mr-1"></i>Manager Name</label>
                        <p class="text-muted">@Model.EmployeeDepartment.ManagerRoleTitle</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Salary And Benefits</h3>
            </div>
            <div class="card-body">
                <input hidden type="number" value="@Model.Employee.ID" name="ID" />
                <div class="row">
                    <div class="col-md-4">
                        <label><i class="fas fa-money-bill-wave mr-1"></i>Basic Salary Amount</label>
                        <p class="text-muted">@Model.EmployeeSalary.BasicSalary</p>
                    </div>
                    <div class="col-md-4">
                        <label><i class="fas fa-money-bill-wave mr-1"></i>Allowance 1</label>
                        <p class="text-muted">@Model.EmployeeSalary.Allowance1</p>
                    </div>
                    <div class="col-md-4">
                        <label><i class="fas fa-money-bill-wave mr-1"></i>Allowance 2</label>
                        <p class="text-muted">@Model.EmployeeSalary.Allowance2</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row">
            <div class="col-md-4">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Education</h3>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.EmployeeEducation)
                        {
                            <div class="row">
                                <label hidden>@item.ID</label>
                                <div class="col-md-12">
                                    <label><i class="fas fa-school mr-1"></i>School</label>
                                    <p class="text-muted">@item.SchoolName</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-book mr-1"></i>Degree Title</label>
                                    <p class="text-muted">@item.DegreeTitle</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-user-graduate mr-1"></i>Degree Type</label>
                                    <p class="text-muted">@item.DegreeTypeName</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-map-marker-alt mr-1"></i>Address</label>
                                    <p class="text-muted">@(item.SchoolAddress + ", " + item.SchoolCountry)</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-calendar-times mr-1"></i>Start - End Dates</label>
                                    <p class="text-muted">@(item.StartDate.ToString("d") + " to " + item.EndDate.ToString("d"))</p>
                                </div>
                            </div>
                            <hr />
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Work Experience</h3>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.EmployeeWork)
                        {
                            <div class="row">
                                <label hidden>@item.ID</label>
                                <div class="col-md-12">
                                    <label><i class="fas fa-book mr-1"></i>Position Title</label>
                                    <p class="text-muted">@item.PositionTitle</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-user-graduate mr-1"></i>Responsibities</label>
                                    <p class="text-muted">@item.Responsibilities</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-calendar-times mr-1"></i>Start - End Dates</label>
                                    <p class="text-muted">@(item.StartDate.ToString("d") + " to " + item.EndDate.ToString("d"))</p>
                                </div>
                            </div>
                            <hr />
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Dependants</h3>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.EmployeeDependants)
                        {
                            <div class="row">
                                <label hidden>@item.ID</label>
                                <div class="col-md-12">
                                    <label><i class="fas fa-book mr-1"></i>Position Title</label>
                                    <p class="text-muted">@item.FullName</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-user-graduate mr-1"></i>Responsibities</label>
                                    <p class="text-muted">@item.RelationshipName</p>
                                </div>
                                <div class="col-md-12">
                                    <label><i class="fas fa-calendar-times mr-1"></i>Start - End Dates</label>
                                    <p class="text-muted">@(item.DateOfBirth.ToString("d"))</p>
                                </div>
                            </div>
                            <hr />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>











