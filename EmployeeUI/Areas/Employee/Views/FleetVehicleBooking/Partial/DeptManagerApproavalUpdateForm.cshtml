
@model DTO.FleetVehicleBookingDTO
<div class="box-body">
    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">Manager's Approval Information</h3>
        </div>
        <div class="card-body">
            <input hidden type="number" value="@Model.ID" name="ID" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Approve/Reject</label>
                        @Html.DropDownList("DepartmentManagerApprovalID", Model.Approvals, "Select Approval Status County", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.DepartmentManagerApprovalID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Approve/Reject Messgae</label>
                        @Html.TextAreaFor(x => x.DepartmentManagerMessage, new { @class = "form-control", @placeholder = "Enter Approval/Denial Message " })
                        @Html.ValidationMessageFor(x => x.DepartmentManagerMessage, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-md-12">
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>





