

@model DTO.FavLogoTitleDTO
<div class="box-body">
    <div class="form-group">
        <label>Title</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Title" })
        @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
    </div>

    <input hidden type="number" value="@Model.ID" name="ID" />
    <div class="form-group">
        <div class="col-md-6">
            @Html.LabelFor(x => x.LogoImage)
            <input type="file" name="LogoImage" accept="image/gif, image/jpg, image/jpeg, image/png"
                   onchange="$('#LogoImage')[0].src = window.URL.createObjectURL(this.files[0])" />
            @if (Model != null && Model.LogoImage != null)
            {
                <br />
                <img src="~/Areas/Employee/Content/FavLogoImages/@Model.Logo" width="300" height="200" id="LogoImage" />
            }
            else
            {
                <img src="" width="300" height="200" id="LogoImage" />
            }
        </div>
        <div class="col-md-6">
            @Html.LabelFor(x => x.FavImage)
            <input type="file" name="FavImage" accept="image/gif, image/jpg, image/jpeg, image/png"
                   onchange="$('#FavImage')[0].src = window.URL.createObjectURL(this.files[0])" />
            @if (Model != null && Model.FavImage != null)
            {
                <br />
                <img src="~/Areas/Employee/Content/FavLogoImages/@Model.Fav" width="300" height="200" id="FavImage" />
            }
            else
            {
                <img src="" width="300" height="200" id="FavImage" />
            }
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>


</div>


