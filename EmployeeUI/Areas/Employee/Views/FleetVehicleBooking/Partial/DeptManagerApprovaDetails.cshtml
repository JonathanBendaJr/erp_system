
@model DTO.FleetVehicleBookingDTO
@if (Model.DepartmentManagerApprovalID > 0) 
{ 
    <div class="box-body">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Department Approval Details</h3>
            </div>
            <div class="card-body">
                <input hidden type="number" value="@Model.ID" name="ID" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Department Manager Name</label>
                            @Html.TextBoxFor(x => x.DepartmentManagerName, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Department </label>
                            @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Department Manager Approval Status</label>
                            @Html.TextBoxFor(x => x.DepartmentManagerApprovalStatus, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Department Manager Approval Message </label>
                            @Html.TextBoxFor(x => x.DepartmentManagerMessage, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (Model.FleetManagerApprovalID > 0)
{
    <div class="box-body">
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">Fleet Manager Approval Details</h3>
            </div>
            <div class="card-body">
                <input hidden type="number" value="@Model.ID" name="ID" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Vehicle Assigned</label>
                            @Html.TextBoxFor(x => x.AssignedVehicleCode, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Driver Assigned </label>
                            @Html.TextBoxFor(x => x.AssignedDriverName, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Fleet Manager Approval Status</label>
                            @Html.TextBoxFor(x => x.FleetManagerApprovalStatus, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Fleet Manager Approval Message </label>
                            @Html.TextBoxFor(x => x.DepartmentManagerMessage, new { @class = "form-control" }, @readonly = "readonly")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}









