
@{
    ViewBag.Title = "FleetDriverFleetVehicleBookingList";
    Layout = "~/Areas/Employee/Views/Shared/MasterLayout.cshtml";
}

@model List<DTO.FleetVehicleBookingDTO>
<section class="content-header">
    <h1>Vehicle Booking List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Fleet Management</a></li>
        <li class="breadcrumb-item"><a>Vehicle</a></li>
        <li class="breadcrumb-item active"><a>Vehicle Booking List</a></li>
    </ol>

</section>
<br />

<div class="card">
    <div class="card-header">
        <h3 class="card-title">List of Approved Vehicle Bookings</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Employee Name</th>
                    <th>Department</th>
                    <th>Destination</th>
                    <th>County</th>
                    <th>Booking Date</th>
                    <th>From Date</th>
                    <th>To Date</th>
                    <th>Request Status</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr id="a_@item.ID">
                    <td>@item.EmployeeName</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.Location</td>
                    <td>@item.CountyName</td>
                    <td>@item.BookingDate</td>
                    <td>@item.FromDate</td>
                    <td>@item.ToDate</td>
                    <td>Approved</td>
                    <td align="center">
                        <a href="/Employee/FleetVehicleBooking/DriverFleetVehicleBookingDetail/@item.ID">
                            <img width="20" height="20" src="~/Areas/Employee/Content/icons/view.png" />
                        </a>
                        <span>|</span>
                        <a href="/Employee/FleetVehicleBookingReport/AddFleetVehicleBookingReport/@item.ID">
                            <img width="20" height="20" src="~/Areas/Employee/Content/icons/update.ico" />
                        </a>
                    </td>

                </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th>Vehicle Type</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Partial("~/Areas/Employee/Views/Shared/ModalMessage.cshtml")
    <!-- /.card-body -->
</div>
<script src="~/Areas/Employee/Content/JS/DeleteRecord.js"></script>
